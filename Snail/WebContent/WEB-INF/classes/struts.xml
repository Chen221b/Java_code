<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<constant name="struts.devMode" value="true"/>
	<package name="struts" extends="json-default">
	
		<!-- 获取用户信息 para:username&userpass -->
		<action name="login"
			class="com.snail.action.User"
			method="loginByName">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="root">userList</param>
			</result>
		</action>
		
		<!-- 获取所有文章信息 para: -->
		<action name="getallarticle"
			class="com.snail.action.Article"
			method="getAllArticle">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="root">articleList</param>
			</result>
		</action>
		
		<!-- 注册 para:userName&userPass -->
		<action name="register"
			class="com.snail.action.User"
			method="registerByNamePass">
			<result name="success">
			</result>
		</action>
		
		<!-- 将文章信息插入数据库 para:articleTittle&articleAddress&articleContent&userId -->
		<action name="publish"
			class="com.snail.action.Article"
			method="publish">
			<result name="success">
			</result>
		</action>
	</package>
</struts>
